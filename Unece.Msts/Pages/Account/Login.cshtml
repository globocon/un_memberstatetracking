@page
@model Unece.Msts.Pages.Account.LoginModel
@{
    Layout = "_non-dashboard-layout";
}


<div class="row row-cols-1 row-cols-lg-2 row-cols-xl-2">
    <div class="col mx-auto">
        <div class="my-4 text-center">
            <img src="~/images/unece_logo.png" width="180" alt="" />

        </div>
        <div class="card">
            <div class="card-body">
                <div class="border p-4 rounded">
                    <div class="form-body">
                        <form class="row g-3" method="post">

                            <div class="col-12">
                                <label asp-for="@Model.LoginUser.UserName" class="form-label"></label>
                                <input asp-for="@Model.LoginUser.UserName" class="form-control">
                                <span asp-validation-for="@Model.LoginUser.UserName"></span>

                            </div>
                            <div class="col-12">
                                <label asp-for="@Model.LoginUser.Password" class="form-label"></label>
                                <input asp-for="@Model.LoginUser.Password" class="form-control">
                                <span asp-validation-for="@Model.LoginUser.Password"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked="">
                                    <label class="form-check-label" for="flexSwitchCheckChecked">Remember Me</label>
                                </div>
                            </div>
                            <div class="col-md-6 text-end">
                                <a href="authentication-forgot-password.html">Forgot Password ?</a>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary w-100 mt-3">Login</button>
                                    <div asp-validation-summary="All"></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

